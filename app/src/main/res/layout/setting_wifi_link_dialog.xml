<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/corners_dialog"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/wifi_link_ssid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="请输入WIFI账号"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/wifi_connect_color"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/wifi_link_view0_background"/>

        <EditText
            android:id="@+id/wifi_link_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入WIFI密码"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:background="@null"
            android:paddingLeft="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/wifi_link_view1_background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="6dp">

            <Button
                android:id="@+id/wifi_link_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="取消"
                android:textSize="18sp"
                android:textStyle="bold"
                style="?android:attr/buttonBarButtonStyle"
                />

            <Button
                android:id="@+id/wifi_link_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="确认"
                android:textSize="18sp"
                android:textStyle="bold"
                style="?android:attr/buttonBarButtonStyle"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>